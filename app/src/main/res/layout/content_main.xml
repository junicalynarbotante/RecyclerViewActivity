<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:padding="10dp"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:textColor="#80ACE3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_author_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author and Published Date"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_short_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="@color/white"
                android:text="short description"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F679A"
                android:text="View More" />

            <Button
                android:id="@+id/btn_read_full_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F679A"
                android:text="Read Full Description" />

            <Button
                android:id="@+id/btn_shop_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9900"
                android:text="Shop now" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgbook"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/a"></ImageView>
    </androidx.cardview.widget.CardView>

</LinearLayout>